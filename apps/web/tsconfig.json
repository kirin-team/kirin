{
  "extends": "@kirin/tsconfig/nextjs.json",
  "compilerOptions": {
    "plugins": [{ "name": "next" }],
    "baseUrl": ".",
    "paths": {
      "@components/*": ["./components/*"],
      "@config/*": ["./config/*"],
      "@locales/*": ["./locales/*"],
      "@public/*": ["./public/*"],
      "@styles": ["./styles/globals.css"],
      "@types": ["./types/index.ts"],
      "@utils": ["./utils/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "tailwind.config.mjs"
  ],
  "exclude": ["node_modules"]
}
