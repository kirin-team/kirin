{
  "name": "glimpse",
  "version": "0.1.0",
  "description": "A glimpse of what a Matrix client should be.",
  "license": "AGPL-3.0-only",
  "keywords": [
    "glimpse",
    "glimpseapp",
    "chat",
    "client",
    "matrix",
    "matrix-org",
    "matrix-client"
  ],
  "author": {
    "name": "Nemanja Stanic",
    "email": "nemanja@d-one.design",
    "url": "https://d-one.design"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "pnpm@8.6.2",
  "scripts": {
    "build": "turbo run build --remote-cache-timeout 60 --summarize true",
    "dev": "turbo run dev --parallel",
    "clean": "turbo clean",
    "lint": "run-p prettier:check eslint:check",
    "lint:fix": "pnpm prettier:fix && pnpm eslint:fix",
    "eslint:check": "eslint . --ext js,jsx,ts,tsx --max-warnings=0 --config .eslintrc.cjs --no-eslintrc",
    "eslint:fix": "pnpm eslint:check --fix",
    "prettier:check": "prettier --check . --ignore-path .gitignore",
    "prettier:fix": "pnpm prettier:check --write"
  },
  "devDependencies": {
    "eslint": "^7.32.0",
    "eslint-config-custom": "workspace:*",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.8",
    "prettier-plugin-tailwindcss": "^0.1.13",
    "turbo": "latest"
  }
}
