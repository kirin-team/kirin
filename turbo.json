{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": ["NODE_ENV", "NEXT_PUBLIC_HIGHLIGHT_PROJECT_ID"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "typescript": {},
    "dev": { "cache": false, "persistent": true },
    "db:deploy": { "cache": false },
    "clean": { "cache": false }
  }
}
